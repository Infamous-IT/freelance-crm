model User {
    id              String   @id @default(uuid())
    firstName       String
    lastName        String
    country         String?
    email           String   @unique
    password        String
    isEmailVerified Boolean? @default(false)
    createdAt       DateTime @default(now())
    updatedAt       DateTime @default(now())
    role            Role     @default(FREELANCER)
    orders          Order[]
}

enum Role {
    MANAGER
    ADMIN
    FREELANCER
}
